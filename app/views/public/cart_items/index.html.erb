<div class="container" style="width:800px">
  <h4 class="row bg-secondary text-black" style="width:260px">
    　ショッピングカート
  </h4>
  <table>
    <thead>
      <tr>
        <th>
          商品名
        </th>
        <th>
          単価（税込）
        </th>
        <th>
          数量
        </th>
        <th>
          小計
        </th>
        <th></th>
      </tr>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.price %>
          </td>
          <td>
            <%= cart_item.amount %>
          </td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.subtotal%></td>
          <% @sum += cart_item.subtotal %>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item.item), method: :delete, class:"btn btn-danger mr-2" %>
          </td>
          
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>