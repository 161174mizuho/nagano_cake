<div class="container" style="width:800px;">
<h4 class="row bg-secondary text-black" style="width:150px;">会員情報編集</h4>
<%= form_with model: @customer, url: customer_path do |f| %>
    <h4>氏名</h4>
      <%= f.text_field :first_name %> <%= f.text_field :last_name %>
    <h4>フリガナ</h4>
      <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
    <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
    <h4>住所</h4>
      <%= f.text_field :address %>
    <h4>電話番号</h4>
     <%= f.text_field :telephone_number %>
    <h4>メールアドレス</h4>
     <%= f.text_field :email %></br>
     
    <%= f.submit '編集内容を保存', class:"btn btn-success mr-2" %> <%= link_to "退会する", customers_unsubscribe_path(@customer), class:"btn btn-danger mr-2" %>
  <% end %>
  </div>