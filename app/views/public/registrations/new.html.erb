<div class="container" style="width:800px;">
  <h2 class="row bg-secondary text-white" style="width:200px;" >新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field row">
    <%= f.label :名前（姓） %><br>
    <%= f.text_field :first_name %>
  </div>

  <div class="field row">
    <%= f.label :フリガナ（セイ） %><br>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field row">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field row">
    <%= f.label :郵便番号（ハイフンなし） %><br>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field row">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>
  
  <div class="field row">
    <%= f.label :電話番号（ハイフンなし） %><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field row">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions row">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
  
<% end %>
</div>

<%= render "public/shared/links" %>
