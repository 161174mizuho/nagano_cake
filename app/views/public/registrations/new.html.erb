<div class="container" style="width:800px;">
  <h2 class="row bg-secondary text-white" style="width:200px;" >新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <%= f.label :名前　　　　　　　　　　（姓）%><br>
      <%= f.text_field :first_name %></br>
      <%= f.label :　　　（名）%><br>
      <%= f.text_field :last_name %></br>
    </div>
    <div class="row">
      <%= f.label :フリガナ　　　　　　　（セイ）%><br>
      <%= f.text_field :first_name_kana %></br>
      <%= f.label :　　（メイ） %><br>
      <%= f.text_field :last_name_kana %></br>
    </div>
    <div class="row">
    <%= f.label :メールアドレス　　　　　　　　%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
    </div>
    <div class="row">
    <%= f.label :郵便番号（ハイフンなし）　　　%>
    <%= f.text_field :postal_code %><br>
    </div>
    <div class="row">
    <%= f.label :住所　　　　　　　　　　　　　%>
    <%= f.text_field :address %><br>
    </div>
    <div class="row">
    <%= f.label :電話番号（ハイフンなし）　　　%>
    <%= f.text_field :telephone_number %><br>
    </div>
    <div class="row">
    <%= f.label :パスワード%>
    <% if @minimum_password_length %>
    <em>（ <%= @minimum_password_length %>文字以上 ）　　　</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %></br>
    </div>
    <div class="row">
    <%= f.label :パスワード（確認用）　　　　　%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
    </div>
    <div class="row mt-2">
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    <div class="row mt-4">
      <p class="row bg-secondary text-black" style="width:150px">すでに登録済みの方</p>
    </div>
    <div class="row">
      <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
    </div>
<% end %>

