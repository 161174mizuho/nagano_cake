<div class="container" style="width:800px">
  <h4 class="row bg-secondary text-black" style="width:200px;">
    配送先登録/一覧
  </h4>
  <%= form_with model: @address do |f| %>
  <div class="row">
    <h5>郵便番号（ハイフンなし）</h5>
    <%=f.text_field :postal_code %>
  </div>
  <div class="row">
    <h5>住所　　　　　　　　　　</h5>
    <%= f.text_field :address %>
  </div>
  <div class="row">
    <h5>宛名　　　　　　　　　　</h5>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録", class:"btn btn-success mr-2" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |addresses| %>
    <tr>
      <%= addresses.postal_code %>
    </tr>
    <tr>
      <%= addresses.address %>
    </tr>
    <tr>
      <%= addresses.name %>
    </tr>
    <% end %>
    <tr>
      <%= link_to "編集する", edit_address_path(@addresses.id), class:"btn btn-success mr-2" %>
    </tr>
    <tr>
      <%= link_to "削除する", address_path(@address.id), method: :delete, class:"btn btn-success mr-2" %>
    </tr>
  </tbody>
</table>
</div>
