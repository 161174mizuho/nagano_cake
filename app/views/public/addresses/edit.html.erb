<div class="container" style="width:800px;">
<h4 class="row bg-secondary text-light " style= "width:120px" >
  配送先編集
</h4>
  <%= form_with model: @address, url: address_path do |f| %>
    <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :postal_code %>
    <h4>住所</h4>
      <%= f.text_field :address %>
    <h4>宛名</h4>
     <%= f.text_field :name %>
    <%= f.submit '変更内容を保存', class:"btn btn-success mr-2" %>
  <% end %>
  </div>