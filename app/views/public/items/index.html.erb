<div class="container" style="width:800px">
  <h4 class="row bg-secondary text-black" style="width:210px;">
    商品一覧（全<%= @items.count %>件）
  </h4>
  <div class="row">
    <div class="col-lg-9">
      <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(100,100), class:"m-0.5" %>
      <% end %>
        <%= item.name %>
        <%= item.price %>円
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>
