<div class="container" style="width:800px;">
  <h4 class="row bg-secondary text-white" style="width:220px;" >
    ジャンル一覧・追加
  </h4>
  <div class="row">
    <div class="col">
      <h4>
        ジャンル名
      </h4>
    </div>
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録" %>
    </div>
  </div>
    <% end %>
  <div class="row">
      <table class ="table">
        <thead>
          <tr>
            <th>
              ジャンル
            </th>
            <th>
              
            </th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
             <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
