<div class="container" style="width:800px;">
  <h4 class="row bg-secondary text-white" >
    <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
  </h4>
  <div class="row">
      <table class ="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th> 
            <th><%= @customer.first_name %><%= @customer.last_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.first_name_kana %><%= @customer.last_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
            </th>
          </tr>
        </thead>
      </table>
      <%= link_to "編集する" ,edit_admin_customer_path(@customer), class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る" ,admin_orders_path, class:"btn btn-primary" %>
  </div>
</div>
