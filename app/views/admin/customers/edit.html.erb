<div class="container" style="width:800px;">
<h4 class="row bg-secondary text-light">
  <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
</h4>
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <h4>会員ID</h4>
      <%= @customer.id %>
    <h4>氏名</h4>
      <%= f.text_field :first_name %>　<%= f.text_field :last_name %>
    <h4>フリガナ</h4>
      <%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %>
    <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
    <h4>住所</h4>
     <%= f.text_field :address %>
    <h4>電話番号</h4>
     <%= f.text_field :telephone_number %>
     
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, '有効', value: false %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, '退会', value: true %>
    <%= f.submit '変更を保存', class:"btn btn-success mr-2" %>
  <% end %>
  </div>