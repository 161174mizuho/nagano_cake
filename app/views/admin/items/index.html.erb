<div class="container" style="width:800px">
<h4 class="row bg-secondary text-black" style="width:110px;">
  商品一覧
</h4>
<%= link_to "+", new_admin_item_path, class:"btn btn-light  mr-2" %>
      <table class ="table">
        <thead>
          <tr>
            <th>
              商品ID
            </th>
            <th>
              商品名
            </th>
            <th>
              税抜価格
            </th>
            <th>
              ジャンル
            </th>
            <th>
              ステータス
            </th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%=link_to item.name ,admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
</div>
