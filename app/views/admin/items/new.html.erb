<h4>新商品追加</h4>
<%= form_with model: @item do |f| %>
    <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>商品説明</h4>
      <%= f.text_area :introduction %>
    <h4>ジャンル</h4>
      <%= f.select :genre.id, [['いち',1], ['に',2], ['さん',3]] %>
    <h4>税抜価格</h4>
     <%= f.text_area :price %>
    <h4>販売ステータス</h4>
    <%= f.label :is_active_default, '販売中' %>
    <%= form.radio_button :is_active, default: %>
    <%= f.label :is_active, '販売停止中' %>
    <%= f.submit '新規登録' %>
    
  <% end %>