<div class="container" style="width:1500px">
  <div class="row">
    <h4 class="row bg-secondary text-black p-2" style="width:170px;">注文履歴一覧</h4>
  </div>
  <div class="row">
    <table border="1">
      <thead>
        <tr>
          <th style="width:200px">購入日時</th>
          <th style="width:200px">購入者</th>
          <th style="width:200px">注文個数</th>
          <th style="width:200px">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %>
            </td>
            <td>
              <%= order.shopping_name %>
            </td>
            <td>
              <% @sum = 0 %>
              <% order.order_details.each do |order_detail| %>
                <% @sum += order_detail.amount %>
              <% end %>
              <%= @sum %>
            </td>
            <td>
              <%= order.order_status_i18n %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>